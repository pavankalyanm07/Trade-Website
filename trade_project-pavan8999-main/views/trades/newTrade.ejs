<%- include('../partials/header.ejs')%>     
<div class = "newTradespage">
      <form class= "trading" action ='/trades' method = 'POST'>
        <div class = "trade-forms">
              <label for= "category"> Category </label>
              <input type = "text" id= "category" name = "category" placeholder= "Pop Music Posters or Desi Music Posters" > <br><br>
        </div>
        <div class = "trade-forms">
              <label class="cls_title" for= "title"> Title </label>
              <input type = "text" id= "title" name = "title" placeholder= "Poster Title" > <br><br>
        </div>
        <div class = "trade-forms">
              <label for= "singer"> Album Singer</label>
              <input type = "text" id= "singer" name = "singer" placeholder= "Enter album singer"  > <br><br>
        </div>
         <div class = "trade-forms">
              <label for= "details"> Description </label>
              <textarea id= "details" name = "details" placeholder= "Poster Details"  minlength="10"> </textarea> <br><br>
         </div>
         <div class = "trade-forms">
            <label for= "image"> Image URL </label>
            <input type = "url" id= "image" name = "image" placeholder= "Poster Image URL" > <br><br>
       </div>
         
            <button type = "Submit">Create Trade</button>
      </form>
    </div>
<%- include('../partials/footer.ejs')%>
